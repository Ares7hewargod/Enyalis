# Production environment variables
# NOTE: Keep this file out of version control if it will contain real secrets.
# Adjust docker-compose to point to this file at deploy time.

PORT=3000
NODE_ENV=production

# --- Security ---
# CHANGE THIS BEFORE DEPLOYING
JWT_SECRET=change_me_in_prod

# --- Database (Docker Postgres service or external) ---
USE_DB=true
REQUIRE_DB=true
DB_HOST=postgres
DB_PORT=5432
DB_USER=enyalis
DB_PASSWORD=change_me_secure
DB_NAME=enyalis_db

